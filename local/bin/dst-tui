#!/usr/bin/env fish
# DST Fish Manager Wrapper

set PYTHON_SCRIPT "$HOME/dst-fish-manager/main.py"

if not test -f "$PYTHON_SCRIPT"
    echo "Error: main.p not found in $HOME/dst-fish-manager/"
    exit 1
end

if not command -v python3 &> /dev/null
    echo "Error: python3 not available"
    exit 1
end

python3 "$PYTHON_SCRIPT" $argv
